<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_background"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="204dp"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.018"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/back" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/fav" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="500dp"
                    android:layout_height="300dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/abc1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="Marine Life Explore"
                android:fontFamily="@font/we1"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marine life exploration plunges us into a mysterious underwater realm, where sunlight fades into shades of blue and green, and every corner hides hidden wonders. Using advanced tools like ROVs, submersibles, high-resolution cameras, and sonar, researchers capture the secrets of ecosystems ranging from vibrant coral reefs to the inky deep sea."
                android:textAlignment="viewStart"
                android:textColor="#EFE4E4"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:justificationMode="inter_word" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In coral reefs, explorers witness vibrant ecosystems where colorful fish, corals, sponges, and anemones interact to maintain a delicate balance, revealing the complex dynamics of marine life.\n\nFrom the deepest trenches to the shimmering coastal waters, marine exploration helps us uncover species never seen before, unlocking valuable insights into evolution and survival. Every discovery contributes to a greater understanding of oceanic biodiversity and the intricate web of life that sustains our planet.\n\nMoreover, marine exploration is vital in addressing global challenges such as climate change, pollution, and habitat destruction. By studying the health of coral reefs and tracking ocean currents, scientists can predict environmental shifts and devise conservation strategies to protect marine ecosystems for future generations.\n\nIn essence, exploring marine life is a blend of adventure, science, and conservationâ€”a quest to understand one of the most complex and least understood realms on our planet."
                android:textAlignment="viewStart"
                android:textColor="#F6F2F2"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:justificationMode="inter_word" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/ddd" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
